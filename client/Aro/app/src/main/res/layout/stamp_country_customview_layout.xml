<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@drawable/cook_county_image" />

    <TextView
        android:id="@+id/stamp_country_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="68dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="미국" />

    <TextView
        android:id="@+id/stamp_country_place_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/stamp_location_name_color"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/diary_histroy_make_country_name_textview"
        app:layout_constraintTop_toBottomOf="@+id/diary_histroy_make_country_name_textview"
        tools:text="쿡 카운티" />

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/stamp_country_place_inform_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/diary_histroy_make_country_name_textview"
        app:layout_constraintTop_toBottomOf="@+id/diary_histroy_make_place_name_textview"
        tools:text="시카고근교에서 즐기는 북극광 명소" />



    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginBottom="60dp"
        android:background="@drawable/diary_histroy_make_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent
"       app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/stamp_country_custom_make_diary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>