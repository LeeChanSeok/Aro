<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/stamp_country_place_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/cook_county_image" />

        <TextView
                android:fontFamily="@font/nanum_square_eb"
                android:includeFontPadding="false"
                android:id="@+id/stamp_country_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="58dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="미국" />

        <TextView
                android:fontFamily="@font/nanum_square_eb"
                android:includeFontPadding="false"
                android:id="@+id/stamp_country_place_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/stamp_location_name_color"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/stamp_country_name_textview"
                app:layout_constraintTop_toBottomOf="@+id/stamp_country_name_textview"
                tools:text="쿡 카운티" />

        <TextView
                android:fontFamily="@font/nanum_myeongjo"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginTop="24dp"
                android:id="@+id/stamp_country_place_inform_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/stamp_country_place_name_textview"
                app:layout_constraintTop_toBottomOf="@+id/stamp_country_place_name_textview"
                tools:text="시카고근교에서 즐기는 북극광 명소" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/stamp_country_custom_make_diary_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:background="@drawable/diary_histroy_make_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>